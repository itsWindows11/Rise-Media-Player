                    </Button>
                    <Button BorderBrush="Transparent" Background="Transparent">
                        <Viewbox Width="18" Height="18">
                            <SymbolIcon Symbol="More" />
                        </Viewbox>
                    </Button>
                </StackPanel>
                <RelativePanel Margin="0,5.5,0,0" x:Name="DefaultVolumeControl">
                    <Viewbox Width="14" Height="14" RelativePanel.AlignVerticalCenterWithPanel="True" x:Name="VolumeIconViewBoxMediaControl">
                        <SymbolIcon Symbol="Volume" />
                    </Viewbox>
                    <Slider ValueChanged="VolumeSlider_ValueChanged" IsThumbToolTipEnabled="False" x:Name="VolumeSlider" Value="33" RelativePanel.LeftOf="VolumeProgressText" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="10,0,10,0" RelativePanel.RightOf="VolumeIconViewBoxMediaControl" />
                    <TextBlock Text="{x:Bind VolumeSlider.Value, Mode=OneWay}" x:Name="VolumeProgressText" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="0,-2,10,0" />
                    
                </RelativePanel>
                <Button HorizontalAlignment="Right" x:Name="VolumeFlyoutButton" BorderBrush="Transparent" Background="Transparent">
                    <FontIcon Glyph="&#xE767;" />
                </Button>
            </StackPanel>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup>
                    <VisualState x:Name="WideState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="1000" />
                        </VisualState.StateTriggers>

                        <VisualState.Setters>
                            <Setter Target="DefaultVolumeControl.Visibility" Value="Visible" />
                            <Setter Target="VolumeFlyoutButton.Visibility" Value="Collapsed" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="DefaultState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0" />
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="DefaultVolumeControl.Visibility" Value="Collapsed" />
                            <Setter Target="VolumeFlyoutButton.Visibility" Value="Visible" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </Border>
</UserControl>
