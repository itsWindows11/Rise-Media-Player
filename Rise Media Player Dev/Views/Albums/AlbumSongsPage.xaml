<Page
    x:Class="Rise.App.Views.AlbumSongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converters="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    x:Name="Root"
    Loaded="Root_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:NullToBoolean x:Key="NullToBool" />
    </Page.Resources>

    <Grid>
        <muxc:TeachingTip
            x:Name="DiscyOnSong"
            Title="Taking action on songs"
            ActionButtonContent="Learn more"
            CloseButtonContent="Got it!"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Auto"
            Subtitle="Hover over a song and click the play button to play a song, or double click. Skip, go back and view song info from the now playing bar (at the bottom of your app window). Click 'Info and Properties' to edit song metadata and file information. You can always share to others or add to a playlist too!">
            <muxc:TeachingTip.HeroContent>
                <Image Source="/Assets/Branding/discygraphic.png" />
            </muxc:TeachingTip.HeroContent>
        </muxc:TeachingTip>

        <ListView
            x:Name="MainList"
            Grid.Row="1"
            Margin="-56,0"
            Padding="44,0,44,120"
            DoubleTapped="MainList_DoubleTapped"
            IsDoubleTapEnabled="True"
            ItemsSource="{x:Bind Songs}"
            RightTapped="MainList_RightTapped"
            SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
            SelectionMode="Single">
            <ListView.Resources>
                <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                    <MenuFlyoutItem x:Uid="/Information/PlayItem" Click="PlayButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE102;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShowArtist" Click="ShowArtist_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE125;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutSubItem
                        x:Name="AddTo"
                        x:Uid="/Information/AddTo"
                        IsEnabled="True">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xECC8;" />
                        </MenuFlyoutSubItem.Icon>
                    </MenuFlyoutSubItem>

                    <MenuFlyoutItem
                        x:Name="Share"
                        x:Uid="/Information/Share"
                        IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE72D;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutItem
                        x:Name="AskDiscy"
                        x:Uid="/Information/AskDiscy"
                        Click="AskDiscy_Click"
                        IsEnabled="True">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE11B;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem
                        x:Name="ShowinFE"
                        x:Uid="/Information/ShowinFE"
                        Click="ShowinFE_Click"
                        IsEnabled="True">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xEC50;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>


                    <MenuFlyoutSeparator />

                    <MenuFlyoutItem
                        x:Name="Remove"
                        x:Uid="/Information/RemoveThing"
                        IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE107;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>


                    <MenuFlyoutItem x:Uid="/MediaData/Properties" Click="Props_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE104;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                </MenuFlyout>
            </ListView.Resources>

            <ListView.Header>
                <Border
                    Margin="0,48,0,24"
                    CornerRadius="8"
                    Style="{StaticResource TransparentCard}">
                    <Grid>
                        <ParallaxView
                            Height="250"
                            Source="{x:Bind MainList}"
                            VerticalShift="500">
                            <Image
                                Opacity="0.6"
                                Source="{x:Bind SelectedAlbum.Thumbnail, Mode=OneWay}"
                                Stretch="UniformToFill" />
                        </ParallaxView>
                        <Border>
                            <Grid Padding="24,24,56,24" ColumnSpacing="24">
                                <Grid.Background>
                                    <media:BackdropBlurBrush Amount="60" />
                                </Grid.Background>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <muxc:ProgressRing
                                    Width="50"
                                    Height="50"
                                    IsActive="True" />

                                <Button
                                    Padding="0"
                                    ui:Effects.Shadow="{StaticResource LightShadowBottomOffset}"
                                    CornerRadius="8"
                                    IsHitTestVisible="False">
                                    <Border animations:Connected.Key="AlbumArt" CornerRadius="8">
                                        <Image
                                            Width="200"
                                            Height="200"
                                            Source="{x:Bind SelectedAlbum.Thumbnail, Mode=OneWay}"
                                            Stretch="Uniform" />
                                    </Border>
                                </Button>

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Spacing="8">
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="36"
                                            MaxLines="1"
                                            Style="{StaticResource TitleTextBlockStyle}"
                                            Text="{x:Bind SelectedAlbum.Title, Mode=OneWay}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--<FontIcon x:Name="Folder"
                                          Grid.Column="1"
                                          FontSize="20"
                                          Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                          Glyph="&#xF12B;"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="left"/>-->

                                        <muxc:TeachingTip x:Name="AlbumTip" />


                                        <ToggleButton
                                            Name="LikeAlbum"
                                            Grid.Column="2"
                                            Width="42"
                                            Height="42"
                                            Margin="3,6,0,0"
                                            Padding="8"
                                            Background="Transparent"
                                            Checked="LikeAlbum_Checked"
                                            Unchecked="LikeAlbum_Unchecked">
                                            <FontIcon
                                                Name="LikeIcon"
                                                FontSize="22"
                                                Glyph="" />
                                        </ToggleButton>
                                    </Grid>

                                    <!--<TextBlock FontWeight="SemiBold" Style="{StaticResource BodyTextBlockStyle}">



                                <Hyperlink Click="Artist_Click" UnderlineStyle="None">
                                    <Run Text="{x:Bind Artist}" />
                                </Hyperlink>



                                    </TextBlock>-->
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="-1,-4,0,0"
                                        Orientation="Vertical">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock>
                                                <Hyperlink
                                                    Click="Artist_Click"
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    UnderlineStyle="None">
                                                    <Run Text="{x:Bind SelectedAlbum.Artist, Mode=OneWay}" />
                                                </Hyperlink>
                                            </TextBlock>

                                            <Rectangle Grid.Column="1" />
                                        </Grid>
                                    </StackPanel>


                                    <TextBlock
                                        Margin="-1,8,0,0"
                                        FontSize="16"
                                        MaxLines="1"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind SelectedAlbum.Genres, Mode=OneWay}" />

                                    <CommandBar
                                        Margin="-12,0"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        DefaultLabelPosition="Right">
                                        <AppBarButton
                                            x:Name="PlayItem"
                                            x:Uid="/Information/Play"
                                            Click="PlayButton_Click"
                                            Icon="Play"
                                            Style="{StaticResource AppBarCompactButtonStyle}" />

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Name="ShuffleItem"
                                            x:Uid="/Information/Shuffle"
                                            Click="ShuffleButton_Click"
                                            Icon="Shuffle"
                                            Label="Shuffle all" />
                                        <AppBarButton
                                            x:Uid="/Information/Add"
                                            IsCompact="True"
                                            IsEnabled="True">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xECC8;" />
                                            </AppBarButton.Icon>

                                            <AppBarButton.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem
                                                        x:Name="NewPlaylist1"
                                                        x:Uid="/Information/NewPlaylist"
                                                        IsEnabled="False">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon FontFamily="Media Player Fluent Icons" Glyph="&#xE93F;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutSeparator />
                                                    <MenuFlyoutItem
                                                        x:Name="PinToStart"
                                                        x:Uid="/Information/PinToStart"
                                                        IsEnabled="False">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE141;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                </MenuFlyout>
                                            </AppBarButton.Flyout>
                                        </AppBarButton>

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Uid="/Information/Delete"
                                            Icon="Delete"
                                            IsEnabled="False"
                                            Style="{StaticResource AppBarCompactButtonStyle}" />
                                        <AppBarButton
                                            x:Uid="/Information/Edit"
                                            Click="EditButton_Click"
                                            Icon="Edit"
                                            IsEnabled="{Binding ElementName=Root, Path=SelectedSong, Converter={StaticResource NullToBool}, Mode=OneWay}"
                                            Style="{StaticResource AppBarCompactButtonStyle}" />
                                    </CommandBar>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </Grid>
                </Border>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SongViewModel">
                    <Grid
                        Padding="0,4"
                        Background="Transparent"
                        ColumnSpacing="12"
                        PointerCanceled="Grid_PointerExited"
                        PointerEntered="Grid_PointerEntered"
                        PointerExited="Grid_PointerExited">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button
                                x:Uid="/Information/Play"
                                Width="36"
                                Height="36"
                                Margin="-2,0,-20,0"
                                Padding="0"
                                Click="PlayButton_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE102;" />
                            </Button>
                        </StackPanel>

                        <TextBlock
                            x:Name="tracknumber"
                            Grid.Column="1"
                            Width="24"
                            Margin="-32,0,0,0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{x:Bind Track}"
                            TextAlignment="Center"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWholeWords"
                            Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}" />

                        <RelativePanel
                            Grid.Column="2"
                            Margin="-16,0,0,0"
                            VerticalAlignment="Center">

                            <TextBlock
                                x:Name="songtitle"
                                MaxLines="2"
                                Text="{x:Bind Title}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="WrapWholeWords" />
                            <TextBlock
                                Margin="16,0,0,0"
                                RelativePanel.RightOf="songtitle"
                                TextTrimming="CharacterEllipsis">
                                <Hyperlink
                                    Click="Artist_Click"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind Artist, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>


                        </RelativePanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button
                                x:Name="PropsHover"
                                x:Uid="/Information/Props"
                                Width="36"
                                Height="36"
                                Padding="0"
                                Click="PropsHover_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE104;" />
                            </Button>
                            <Button
                                x:Uid="/Information/Like"
                                Width="36"
                                Height="36"
                                Padding="0"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE006;" />
                            </Button>
                            <TextBlock
                                Margin="12"
                                VerticalAlignment="Center"
                                Text="{x:Bind Length, Converter={StaticResource TimeToStr}}"
                                Visibility="{x:Bind IsDurationVisible, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>



            <ListView.Footer>

                <Grid x:Name="IfAlbumHasMore" ColumnSpacing="12" Margin="0,12,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        x:Name="MoreAlbumsByArtist"
                        Width="auto"
                        Height="auto"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE93C;" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="More albums by this artist" />
                                </StackPanel>
                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                            </StackPanel>
                            <GridView
                                Margin="0,48,0,-8"
                                Grid.Row="1"
                                ItemsSource="{x:Bind AlbumsByArtist}"
                                SelectionMode="Single"
                                Tapped="GridView_Tapped">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:AlbumViewModel">
                                        <StackPanel
                                            Width="134"
                                            Margin="12"
                                            Orientation="Vertical"
                                            Spacing="2">
                                            <Border x:Name="ItemThumbnail" CornerRadius="4">
                                                <Image
                                                    Width="134"
                                                    Height="134"
                                                    Stretch="UniformToFill">
                                                    <Image.Source>
                                                        <BitmapImage
                                                            DecodePixelHeight="134"
                                                            DecodePixelWidth="134"
                                                            UriSource="{x:Bind Thumbnail}" />
                                                    </Image.Source>
                                                </Image>
                                            </Border>

                                            <TextBlock
                                                    Padding="0,7,0,0"
                                                    MaxLines="1"
                                                    Style="{StaticResource BaseTextBlockStyle}"
                                                    Text="{x:Bind Title}"
                                                    TextWrapping="Wrap" />
                                            <TextBlock
                                                    Padding="0,0,0,0"
                                                    MaxLines="1"
                                                    Text="{x:Bind Year}"
                                                    TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </Grid>
                    </Border>

                    <Border
                        x:Name="RelatedAlbums"
                        Grid.Column="1"
                        Width="auto"
                        Margin="0,12,0,0"
                        Height="150"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                                    <FontIcon Glyph="" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="You might like these" />
                                </StackPanel>
                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
                                <TextBlock
                                Margin="0,16,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Opacity="0.6"
                                Text="Coming soon" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    

                </Grid>
            </ListView.Footer>
        </ListView>
    </Grid>
</Page>
